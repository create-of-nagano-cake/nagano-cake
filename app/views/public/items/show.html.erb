<%= render "public/sessions/header" %>

<div>
  <%= image_tag @item.get_image(100,100) %>
  <%= @item.name %>
  <%= @item.introduction %>
  <%= @item.price %>
  
  <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
   <%= f.hidden_field :cart_item, :value => @item.id %>
   <%= f.select :amount, *[1..10] %>
   <%= f.submit "カートに入れる" %>
  <% end %> 
  
</div>