<%= render "admin/sessions/header" %>

<div class='container'>
 <div class='row'>
  <div class='col-8 offset-1'>
   <div class='row'>
    <div class='col mt-4 mb-4'>
     <div class="bg-secondary">
      <h3>ジャンル編集</h3>
     </div>


         <div class="row">
          <div class="col-3 offset-1">ジャンル名</div>
          <div class="col-7">
            <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
             <div class="row">
              <div class="col-7">
               <%= f.text_field :name, class: "mr-2" %>
              </div>
              <div class="col-4">
               <%= f.submit "変更を保存", class: "btn btn-success" %>
              </div>
             </div>
            <% end %>
          </div>
         </div>

    </div>
   </div>
  </div>
 </div>
</div>