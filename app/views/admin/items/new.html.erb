<%= render "admin/sessions/header" %>

<h3>商品新規登録</h3>
<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
 <div>
  <label>商品画像</label>
  <%= f.file_field :image, accept: "image/*" %>
 </div>
 
 <div>
  <label>商品名</label>
  <%= f.text_field :name %>
 </div>
 
 <div>
  <label>商品説明</label>
  <%= f.text_area :introduction %>
 </div>
 
 <div>
  <label>ジャンル</label>
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
 </div>
 
 <div>
  <label>税抜価格</label> 
  <%= f.text_field :price %>
 </div>
 
 <div>
  <label>販売ステータス</label> 
  <%= f.radio_button :is_active, :true %>
  <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
  
  <%= f.radio_button :is_active, :false %>
  <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
 </div>
 
 <div>
  <%= f.submit "新規登録" %>
 </div>
<% end %> 