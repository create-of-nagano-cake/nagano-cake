<%= render "public/sessions/header" %>

<div class='container'>
 <div class='row'>
  <div class='col-8 offset-1'>
   <div class='row'>
    <div class='col mt-4 mb-4'>
      
     <div class="bg-secondary">
      <h3>会員情報編集</h3>
     </div>
     
      <%= form_with model: @customer, url: customers_information_edit_path do |f| %>
        <div>
         <label class="col-4 offset-1">氏名</label>
         <%= f.text_field :last_name %> <%= f.text_field :first_name %>
        </div> 
        
        <div>
         <label class="col-4 offset-1">カナ</label>
         <%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %>
        </div>
        
        <div>
         <label class="col-4 offset-1">郵便番号</label>
         <%= f.text_field :postal_code %>
        </div>
        
        <div>
         <label class="col-4 offset-1">住所</label>
         <%= f.text_field :address %>
        </div>
        
        <div>
         <label class="col-4 offset-1">電話番号</label>
         <%= f.text_field :telephone_number %>
        </div> 
         
        <div> 
         <label class="col-4 offset-1">メールアドレス</label>
         <%= f.text_field :email %>
        </div>
        
        <div class="text-center">
          <%= f.submit "編集内容を保存", class: "btn btn-success mr-5" %>
          <%= link_to "退会する", customers_information_confirm_path, class: "btn btn-danger" %>
        </div>
      <% end %>
  
    </div>
   </div>
  </div>
 </div>
</div> 