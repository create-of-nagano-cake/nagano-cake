<%= render "admin/sessions/header" %>

<div class='container'>
 <div class='row'>
  <div class='col-6 offset-1'>
   <div class='row'>
    <div class='col mt-4 mb-4'>
      <div class="bg-secondary">
       <h3>ジャンル一覧・追加</h3>
      </div>  
      <table>
        <tr>
          <th>ジャンル名</th>
          <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
           <td><%= f.text_field :name %></td>
           <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
          <% end %> 
        </tr>
      </table>
    </div>
   </div> 
   
   <div class='row'>
    <div class='col mt-4 mb-4'>   
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        
        <tbody>
          <% @genres.each do |genre| %>
           <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
           </tr>  
          <% end %> 
        </tbody> 
      </table>
    </div>
   </div>
  </div>
 </div>
</div>  