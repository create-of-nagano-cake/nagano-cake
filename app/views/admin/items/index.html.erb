<%= render "admin/sessions/header" %>

<div class='container'>
 <div class='row'>
  <div class='col-8 offset-2'>
   <div class='row'>
    <div class='col mt-4 mb-4'>

     <div class="bg-secondary">
      <div class="row">
       <div class="col-11">
        <h3>商品一覧</h3>
       </div>

        <%= link_to new_admin_item_path, class: "btn btn-light text-right" do %>
        <i class="fa-solid fa-plus"></i>
       
       <% end %>
      </div>
     </div>

    </div>
   </div>
   <table class="table">
    <thead>
     <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
      <th colspan="5"></th>
      </tr>
    </thead>

    <tbody>
     <% @items.each do |item| %>

      <tr>
       <td><%= item.id %></td>

       <td>
        <%= link_to admin_item_path(item.id) do %>
         <%= item.name %>
        <% end %>
       </td>

       <td><%= item.price %></td>

       <td><%= item.genre.name %></td>

       <% if item.is_active == true %>
        <td>販売中</td>
       <% else %>
        <td>販売停止中</td>
       <% end %>
      </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>