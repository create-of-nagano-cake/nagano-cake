<%= render "public/sessions/header" %>

<div class='container'>
 <div class='row'>
  <div class='col-8 offset-1'>
   <div class='row'>
    <div class='col mt-4 mb-4'>
      
     <div class="bg-secondary">
      <h3>配送先編集</h3>
     </div>  

      <%= form_with model: @address, url: address_path, method: :patch do |f| %>
      
        <% if @address.errors.any? %>
         <h3><%= pluralize(@address.errors.count, "error") %> prohibited this obj from being saved:</h3>
         <ul>
         <% @address.errors.full_messages.each do |message| %>
          <li><%= message %></li>
         <% end %> 
         </ul>
        <% end %>
       
       <div>
        <label class="col-4 offset-1">郵便番号（ハイフンなし）</label>
        <%= f.text_field :postal_code %>
       </div>
       
       <div>
        <label class="col-4 offset-1">住所</label>
        <%= f.text_field :address %>
       </div>
       
       <div>
        <label class="col-4 offset-1">宛名</label>
        <%= f.text_field :name %> <%= f.submit "変更内容を保存", class: "btn btn-success" %>
       </div>
      <% end %>
    </div>   
   </div>
  </div>
 </div>
</div> 