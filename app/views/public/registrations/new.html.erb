<%= render "public/sessions/header" %>

<div class='container'>
 <div class='row'>
  <div class='col-10 offset-1'>
   <div class='row'>
    <div class='col mt-4 mb-4'>

     <div class="bg-secondary">
      <h2>新規登録</h2>
     </div>

      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

       <div class="field d-flex justify-content-start mt-3">
          <%= f.label :name, "名前", class: "col-4" %>
          <%= f.label :last_name, "(姓)" %>
          <%= f.text_field :last_name %>
          <%= f.label :first_name, "(名)" %>
          <%= f.text_field :first_name %>
       </div>

       <div class="field d-flex justify-content-start mt-3">
          <%= f.label :name, "フリガナ", class: "col-4" %>
          <%= f.label :last_name_kana, "(セイ)" %>
          <%= f.text_field :last_name_kana %>
          <%= f.label :first_name_kana_name, "(メイ)" %>
          <%= f.text_field :first_name_kana %>
       </div>

       <div class="field d-flex justify-content-start mt-3">
          <%= f.label :email, "メールアドレス", class: "col-4" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
       </div>

       <div class="field d-flex justify-content-start mt-3">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-4" %>
          <%= f.text_field :postal_code %>
       </div>

       <div class="field d-flex justify-content-start mt-3">
          <%= f.label :address, "住所", class: "col-4" %>
          <%= f.text_field :address %>
       </div>

       <div class="field d-flex justify-content-start mt-3">
          <%= f.label :telephone_number, "電話番号(ハイフンなし)", class: "col-4" %>
          <%= f.text_field :telephone_number %>
       </div>

        <div class="field d-flex justify-content-start mt-3">
         <div class="col-4">
           <%= f.label :password, "パスワード" %>
           <% if @minimum_password_length %>
           <em>(<%= @minimum_password_length %> 文字以上)</em>
           <% end %>
         </div>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field d-flex justify-content-start mt-3">
          <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-4" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions mt-4">
         <div class="text-center">
          <%= f.submit "新規登録", class: "btn btn-success" %>
         </div>
        </div>
      <% end %>

     <div class="bg-secondary mt-3">
      <h3>既に登録済みの方</h3>
     </div>

     <div class="ml-3">
      <%= render "public/shared/links" %>
     </div>

    </div>
   </div>
  </div>
 </div>
</div>


