<%= render "public/sessions/header" %>

<h3>配送先編集</h3>

<div>
  <%= form_with model: @address, url: address_path, method: :patch do |f| %>
  
    <% if @address.errors.any? %>
     <h3><%= pluralize(@address.errors.count, "error") %> prohibited this obj from being saved:</h3>
     <ul>
     <% @address.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %> 
     </ul>
    <% end %>
  
   <p>郵便番号（ハイフンなし）<%= f.text_field :postal_code %></p>
   <p>住所 <%= f.text_field :address %></p>
   <p>宛名 <%= f.text_field :name %> <%= f.submit "変更内容を保存" %></p>
  <% end %>
</div>