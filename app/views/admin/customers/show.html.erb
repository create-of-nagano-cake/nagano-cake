<%= render "admin/sessions/header" %>

<div class='container'>
 <div class='row'>
  <div class='col-6 offset-1'>
   <div class='row'>
    <div class='col mt-4 mb-4'>
     <div class="bg-secondary">
      <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>
     </div>

      <table class="table">
        <tr>
         <div class="row"> 
          <th class="col-3 offset-1">会員ID</th>
         </div>
          <td><%= @customer.id %></td>
        </tr>

        <tr>
         <div class="row"> 
          <th class="col-3 offset-1">氏名</th>
         </div>
          <td><%= @customer.last_name %><%= @customer.first_name %></td>
        </tr>

        <tr>
         <div class="row"> 
          <th class="col-3 offset-1">フリガナ</th>
         </div>
          <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
        </tr>

        <tr>
         <div class="row"> 
          <th class="col-3 offset-1">郵便番号</th>
         </div>
          <td><%= @customer.postal_code %></td>
        </tr>

        <tr>
         <div class="row"> 
          <th class="col-3 offset-1">住所</th>
         </div>
          <td><%= @customer.address %></td>
        </tr>

        <tr>
         <div class="row"> 
          <th class="col-3 offset-1">電話番号</th>
         </div>
          <td><%= @customer.telephone_number %></td>
        </tr>

        <tr>
         <div class="row"> 
          <th class="col-3 offset-1">メールアドレス</th>
         </div>
          <td><%= @customer.email %></td>>
        </tr>

        <tr>
         <div class="row"> 
          <th class="col-3 offset-1">会員ステータス</th>
         </div>
          <% if @customer.is_deleted == true %>
           <td class="text-secondary">退会</td>
          <% else %>
           <td class="text-success">有効</td>
          <% end %>
        </tr>

        <tr>
         <div class="row"> 
          <th class="col-3 offset-1"></th>
         </div>
          <td><%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success mx-2" %></td>
          <td><%= link_to "注文履歴一覧を見る", admin_path, class: "btn btn-primary mx-2" %></td>
        </tr>
      </div>
    </div>
   </div>
  </div>
 </div>
</div>