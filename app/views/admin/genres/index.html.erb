<%= render "admin/sessions/header" %>

<h3>ジャンル一覧・追加</h3>
<table>
  <tr>
    <th>ジャンル名</th>
    <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
     <td><%= f.text_field :name %></td>
     <td><%= f.submit "新規登録" %></td>
    <% end %> 
  </tr>
</table>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @genres.each do |genre| %>
     <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id)%></td>
     </tr>  
    <% end %> 
  </tbody> 
</table>