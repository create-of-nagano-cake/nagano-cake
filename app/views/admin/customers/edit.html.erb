<%= render "admin/sessions/header" %>

<div class='container'>
 <div class='row'>
  <div class='col-6 offset-1'>
   <div class='row'>
    <div class='col mt-4 mb-4'>
     <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
      <table>
        <tr>
         <div class="row"> 
          <th class="col-3 offset-1">会員ID</th>
         </div>
          <td><%= @customer.id %></td>
        </tr>

       <%= form_with model: @customer, url: admin_customer_path, method: :patch  do |f| %>
        <tr>
         <div class="row"> 
          <th class="col-3 offset-1">氏名</th>
         </div>
         <td>
          <%= f.text_field :last_name, class: "mr-2"%>
          <%= f.text_field :first_name %>
         </td>
        </tr>

        <tr>
         <div class="row"> 
          <th class="col-3 offset-1">フリガナ</th>
         </div>
         <td>
          <%= f.text_field :last_name_kana, class: "mr-2" %>
          <%= f.text_field :first_name_kana %>
         </td>
        </div>

        <tr>
         <div class="row"> 
          <th class="col-3 offset-1">郵便番号</th>
         </div>
         <td><%= f.text_field :postal_code %></td>
        </tr>

        <tr>
         <div class="row"> 
          <th class="col-3 offset-1">住所</th>
         </div>
         <td><%= f.text_field :address %></td>
        </tr>

        <tr>
         <div class="row"> 
          <th class="col-3 offset-1">電話番号</th>
         </div>
         <td><%= f.text_field :telephone_number %></td>
        </tr>

        <tr>
         <div class="row"> 
          <th class="col-4 offset-1">メールアドレス</th>
         </div>
         <td><%= f.text_field :email %></td>
        </tr>

        <tr>
         <div class="row"> 
          <th class="col-4 offset-1">会員ステータス</th>
         </div>
         <td>
          <%= f.radio_button :is_deleted, :false %>
          <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>

          <%= f.radio_button :is_deleted, :true %>
          <%= f.label :is_deleted, "退会", {value: :true, style: "display: inline-block;"} %>
         </td>
        </tr>

        <td>
         <%= f.submit "変更を保存", class: "btn btn-success" %>
        </td>
     <% end %>
    </table> 
    </div>
   </div>
  </div>
 </div>
</div>