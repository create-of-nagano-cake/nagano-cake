<%= render "public/sessions/header" %>

<h3>注文一覧画面</h3>

<table>
 <thead>
  <tr>
   <th>注文日</th>
   <th>配送先</th>
   <th>注文商品</th>
   <th>支払金額</th>
   <th>注文詳細</th>
   <th colspan="5"></th>
   </tr>
 </thead>

 <tbody>
  <% @order_details.each do |order_detail| %>
   <tr>
    <td><%= order_detail.created_at %></td>
    
    <td><%= order_detail.order.address %></td>
    
    <td><%= order_detail.item.name %></td>
    
    <td><%= order_detail.price %></td>
    
    <td><%= link_to "表示する", order_path(order_detail.id) %></td>
   </tr> 
  <% end %>
  
 </tbody> 
</table> 
