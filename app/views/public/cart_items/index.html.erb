<%= render "public/sessions/header" %>

<div class='container'>
 <div class='row'>
  <div class='col-10 offset-1'>
   <div class='row'>
    <div class='col mt-4 mb-4'>
     
     <div class="bg-secondary">
      <div class="row">
       <div class="col-9">
        <h3>ショッピングカート</h3>
       </div> 
       <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger text-right" %>
      </div> 
     </div>

     <table class="table mt-2">
      <thead>
       <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
        <th colspan="5"></th>
        </tr>
      </thead>
     
      <tbody>
       <% @cart_items.each do |cart_item| %>
        <tr>
         <td><%= cart_item.item.name %></td>
         
         <td><%= cart_item.item.with_tax_price %></td>
         
         <td>
          <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
           <%= f.select :amount, *[1..10] %>
           <%= f.submit "変更", class: "btn btn-success" %>
          <% end %>
         </td>
         
         <td><%= cart_item.subtotal %></td>
         
         <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %></td>
         
         <% @total += cart_item.subtotal %>
         
        </tr> 
       <% end %>
       
      </tbody> 
     </table>
     
     <div class="row">
      <div class="col-9">
       <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
      </div>
      
      <div class="col-3"> 
       <table class="table">
        <tr>
         <th>合計金額</th>
         <td><%= @total %></td>
        </tr> 
       </table>
      </div> 
     </div> 
     
     <div class="text-center">
      <%= link_to "情報入力へ進む", new_order_path, class: "btn btn-success" %>
     </div>
     
    </div> 
   </div>
  </div>
 </div>
</div> 