<%= render 'header' %>

<div class='container'>
 <div class='row'>
  <div class='col-6 offset-1'>
   <div class='row'>
    <div class='col mt-4 mb-4'>

     <div class="bg-secondary">
      <h3>ログイン</h3>
     </div>

     <div class="bg-secondary mt-4">
      <p>会員の方はこちらからログイン</p>
     </div>

      <%= form_with model: @customer, url: customer_session_path do |f| %>
        <div class="field">
          <%= f.label :email, "メールアドレス", class: "col-4 offset-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード", class: "col-4 offset-1" %>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="actions text-center">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="bg-secondary mt-5">
       <h3>会員登録がお済みでない方</h3>
      </div>
      
      <div class="ml-5">
       <%= render "public/shared/links" %>
      </div> 

    </div>
   </div>
  </div>
 </div>
</div>
