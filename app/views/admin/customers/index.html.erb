<%= render "admin/sessions/header" %>

<div class='container'>
 <div class='row'>
  <div class='col-8 offset-2'>
   <div class='row'>
    <div class='col mt-4 mb-4'>
     <h3>会員一覧</h3>
     <table class="table">
      <thead>
       <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
        <th colspan="4"></th>
        </tr>
      </thead>
     
      <tbody>
       <% @customers. each do |customer| %>
        <tr>
         <td><%= customer.id %></td>
         
         <td>
          <%= link_to admin_customer_path(customer.id) do %>
           <%= customer.last_name %>
           <%= customer.first_name %>
          <% end %>
         </td>
         
         <td><%= customer.email %></td>
         
           <% if customer.is_deleted == true %>
            <td class="text-secondary">退会</td>
           <% else %>
            <td class="text-success">有効</td>
           <% end %>
     
        </tr> 
       <% end %> 
      </tbody> 
     </table>
    </div>
   </div>
  </div>
 </div>
</div> 