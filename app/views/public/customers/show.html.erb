<%= render "public/sessions/header" %>

<div class='container'>
 <div class='row'>
  <div class='col-8 offset-1'>
   <div class='row'>
    <div class='col mt-4 mb-4'>

     <div class="bg-secondary">
      <h3>マイページ</h3>
     </div>

     <h3><strong>登録情報</strong>
     <%= link_to "編集する", customers_information_edit_path, class: "btn btn-success" %></h3>

     <table class="table">
      <tr>
       <th>氏名</th>
       <td><%= @customer.last_name %> <%= @customer.first_name %></td>
      </tr>

      <tr>
       <th>カナ</th>
       <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
      </tr>

      <tr>
       <th>郵便番号</th>
       <td><%= @customer.postal_code %></td>
      </tr>

      <tr>
       <th>住所</th>
       <td><%= @customer.address %></td>
      </tr>

      <tr>
       <th>電話番号</th>
       <td><%= @customer.telephone_number %></td>
      </tr>

      <tr>
       <th>メールアドレス</th>
       <td><%= @customer.email %></td>
      </tr>
     </table>

     <table>
      <tr>
       <th><h4>配送先</h4></th>
       <td><%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %></td>
      </tr>

      <tr>
       <th><h4>注文履歴</h4></th>
       <td><%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %></td>
      </tr>
     </table>

    </div>
   </div>
  </div>
 </div>
</div>