<%= render 'header' %>

<div class='container'>
 <div class='row'>
  <div class='col-6 offset-1'>
   <div class='row'>
    <div class='col mt-4 mb-4'>

     <div class="bg-secondary">
      <h3>管理者ログイン</h3>
     </div>

      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <div class="field">
          <%= f.label :email, "メールアドレス", class: "col-4 offset-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード", class: "col-4 offset-1" %>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="actions text-center mt-2">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>

      <%= render "admin/shared/links" %>
    </div>
   </div>
  </div>
 </div>
</div>