<%= render "admin/sessions/header" %>

<div class='container'>
 <div class='row'>
  <div class='col-8 offset-1'>

    <div class='col mt-4 mb-4'>

     <div class="bg-secondary">
      <h3>商品詳細</h3>
     </div>

     </div>
       <div class="row">
        <div class="col-3 offset-1">
         <%= image_tag @item.get_image(100,100) %>
        </div>

        <div class="col-7">
         <table>
           <tr>
            <th class="col-4 offset-1">商品名</th>
            <td><%= @item.name %></td>
           </tr>

           <tr>
            <th class="col-4 offset-1">商品説明</th>
            <td><%= @item.introduction %></td>
           </tr>

           <tr>
            <th class="col-4 offset-1">ジャンル</th>
            <td><%= @item.genre.name %></td>
           </tr>

           <tr>
            <th class="col-5 offset-1">税抜価格</th>
            <td><%= @item.price %></td>
           </tr>

           <tr>
            <th class="col-5 offset-1">販売ステータス</th>
            <td>
              <% if @item.is_active == true %>
               販売中
              <% else %>
               販売停止中
              <% end %>
            </td>
           </tr>

           <tr>
            <th></th>
            <td><%= link_to "編集する", edit_admin_item_path, class: "btn btn-success" %></td>
           </tr>
         </table>
        </div>


      </div>
    </div>
   </div>
  </div>
 </div>
</div>
