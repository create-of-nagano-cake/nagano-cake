<%= render "public/sessions/header" %>

<div class='container'>
 <div class='row'>
  <div class='col-8 offset-1'>
   <div class='row'>
    <div class='col mt-4 mb-4'>

     <div class="bg-secondary">
      <h3>注文情報入力</h3>
     </div>

      <%= form_with model: @order, url: orders_confirm_path, method: :post do |f| %>

       <% if @order.errors.any? %>
         <h3><%= pluralize(@order.errors.count, "error") %> prohibited this obj from being saved:</h3>
         <ul>
         <% @order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
         <% end %>
         </ul>
       <% end %>

       <div>
        <h3>支払方法</h3>
        <div class="ml-5">
         <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
         <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
         <%= f.radio_button :payment_method, Order.payment_methods.key(1)  %>
         <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
        </div>
       </div>

       <div>
        <h3>お届け先</h3>
        <div class="ml-5">
         <%= f.radio_button :select_address, "0" %>
         <%= f.label :address_id, "ご自身の住所" %>
         <div class="ml-3">
          <p>〒<%= @customer.postal_code %> <%= @customer.address %></p>
          <p><%= @customer.last_name %> <%= @customer.first_name %></p>
         </div>
        </div>

        <div class="ml-5">
         <%= f.radio_button :select_address, "1" %>
         <%= f.label :address_id, "登録済住所から選択" %>
         <div class="ml-3">
          <p><%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :address_display) %></p>
         </div>
        </div>

        <div class="ml-5">
         <%= f.radio_button :select_address, "2" %>
         <%= f.label :address_id, "新しいお届け先" %>

          <div>
           <label class="col-4">郵便番号(ハイフンなし)</label>
           <%= f.text_field :postal_code %>
          </div>

          <div>
           <label class="col-4">住所</label>
           <%= f.text_field :address %>
          </div>

          <div>
           <label class="col-4">宛名</label>
           <%= f.text_field :name %>
          </div>
        </div>
      </div>

       <div class="text-center">
        <%= f.submit "確認画面へ進む", class: "btn btn-success" %>
       </div> 
      <% end %>

    </div>
   </div>
  </div>
 </div>
</div>