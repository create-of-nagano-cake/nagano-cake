<%= render "admin/sessions/header" %>

<h3>注文履歴詳細</h3>

<table>
  <tr><th>購入者</th><td><%= @order.customer.last_name %><%= @order.customer.first_name %></td></tr>
   
  <tr><th>注文日</th><td><%= @order.created_at %></td></tr>
   
  <tr><th>配送先</th><td>〒<%= @order.postal_code %><%= @order.address %><br><%= @order.name %></td></tr>
  
  <tr><th>支払方法</th><td><%= @order.payment_method_i18n %></td></tr>
</table>

<table>
 <thead>
  <tr>
   <th>商品名</th>
   <th>単価（税込）</th>
   <th>数量</th>
   <th>小計</th>
   <th></th>
   <th colspan="5"></th>
   </tr>
 </thead>

 <tbody>
  <% @order_details.each do |order_detail| %>
   <tr>
    <td><%= order_detail.item.name %></td>
    
    <td><%= order_detail.item.with_tax_price %></td>
    
    <td><%= order_detail.amount %></td>
    
    <td><%= order_detail.subtotal %></td>
    
    <% @total += order_detail.subtotal %>
    
   </tr> 
  <% end %>
  
 </tbody> 
</table> 

<table>
  <tr><th>商品合計</th><td><%= @total %></td></tr>
  
  <tr><th>送料</th><td>800</td></tr>
   
  <tr><th>請求金額</th><td><%= @total + 800 %></td></tr>
</table> 
